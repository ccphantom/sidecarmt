{
  "name": "sidecarmt",
  "version": "0.0.1",
  "repository": "https://github.com/ccphantom/sidecarmt.git",
  "license": "UNLICENSED",
  "description": "ECO Union Solution Sidecar Business Application",
  "engines": {
    "node": "14.x"
  },
  "dependencies": {
    "@sap/audit-logging": "^5",
    "@sap/cds": "^6.0.0",
    "@sap/cds-mtx": "^2",
    "@sap/xsenv": "^3",
    "@sap/xssec": "^3",
    "cfenv": "^1",
    "debug": "^4.3",
    "express": "^4",
    "generator-sap-partner-eng": "^0.3.11",
    "hdb": "^0.19",
    "passport": "^0.4.1",
    "cf-nodejs-logging-support": "^6.10.0"
  },
  "devDependencies": {
    "sqlite3": "^5.0.2",
    "@sap/ux-specification": "^1.96.4"
  },
  "sapux": [
    "app/resources/fiori"
  ],
  "scripts": {
    "start": "cds run"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "build": {
      "target": "gen",
      "tasks": [
        {
          "for": "hana",
          "src": "db",
          "options": {
            "model": [
              "db",
              "app",
              "srv"
            ]
          }
        },
        {
          "for": "node-cf",
          "src": "srv",
          "options": {
            "model": [
              "db",
              "app",
              "srv"
            ]
          }
        },
        {
          "for": "mtx",
          "src": ".",
          "dest": "srv",
          "options": {
            "model": [
              "db",
              "app",
              "srv",
              "."
            ]
          }
        }
      ]
    },
    "requires": {
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "JWT",
          "users": {
            "joe": {
              "roles": [
                "Admin",
                "Viewer"
              ]
            },
            "julie": {
              "roles": [
                "Viewer"
              ]
            },
            "bob": {
              "roles": [
                "Viewer"
              ]
            }
          }
        }
      },
      "db": {
        "[production]": {
          "kind": "hana-cloud"
        },
        "[development]": {
          "kind": "sql"
        },
        "model": [
          "db",
          "srv"
        ],
        "vcap": {
          "label": "service-manager"
        }
      },
      "multitenancy": true
    },
    "mtx": {
      "api": {
        "provisioning": true,
        "metadata": true,
        "model": true
      },
      "element-prefix": [
        "Z_",
        "ZZ_"
      ],
      "namespace-blocklist": [
        "com.sap.",
        "sap.",
        "sidecarmt."
      ],
      "extension-allowlist": [
        {
          "for": [
            "sidecarmt.db.Unions"
          ]
        },
        {
          "for": [
            "UnionService"
          ],
          "kind": "service"
        }
      ]
    }
  }
}
